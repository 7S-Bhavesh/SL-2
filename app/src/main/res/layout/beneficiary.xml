<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="4dp"
            android:background="#FFFFFF"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Aarav Mehta"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/tvAccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Number: 4532 7812 9876 1245"
                    android:layout_marginTop="8dp"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance: â‚¹145,320.75"
                    android:layout_marginTop="8dp"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tvBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank: HDFC Bank"
                    android:layout_marginTop="8dp"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tvBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch: Mumbai Main Branch"
                    android:layout_marginTop="10dp"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tvIFSC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IFSC: HDFC0001234"
                    android:layout_marginTop="10dp"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: +91-9876543210"
                    android:layout_marginTop="10dp"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: aarav.mehta@example.com"
                    android:layout_marginTop="10dp"
                    android:textColor="#444" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: 21, Green Park Avenue, Mumbai, Maharashtra - 400001"
                    android:layout_marginTop="10dp"
                    android:textColor="#444"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/money"
                    android:text="Send Money"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
