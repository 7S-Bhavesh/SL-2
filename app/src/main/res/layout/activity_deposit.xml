<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".DepositActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deposit Funds"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:elevation="2dp" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:padding="20dp"
        android:inputType="numberDecimal"
        android:drawableStart="@drawable/ic_currency"
        android:drawablePadding="16dp"
        android:textColorHint="@color/hint_text"
        android:background="@drawable/edit_background_text"
        android:elevation="4dp"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deposit"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/primary_color"
        android:padding="16dp"
        app:icon="@drawable/ic_deposit"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        android:elevation="8dp" />

</LinearLayout>